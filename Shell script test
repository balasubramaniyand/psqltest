#!/bin/bash

# Define the directory path
directory="/opt/supportfirst/apiservice/logs"

# Define the retention period in days (modify as needed)
retention_days=30

# Get the date one month ago
past_date=$(date -d "-${retention_days} days" "+%Y-%m-%d")

# Construct the filename pattern (assuming consistent naming)
filename_pattern="console_*.log"

# Find and delete files older than the retention period
find "$directory" -type f -name "$filename_pattern" -mtime +"$retention_days" -delete

# Informative message
echo "Log files older than $retention_days days have been deleted from $directory."
